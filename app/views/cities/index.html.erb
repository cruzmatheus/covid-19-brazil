
<h1 class="mdc-typography--headline5"><%= @state.name %></h1>

<div>
  <span class="mdc-typography--caption">Fonte: <a href="https://brasil.io/dataset/covid19/caso">Brasil.IO</a></span>
<div>

<div class="mdc-data-table">
  <table class="mdc-data-table__table">
    <thead>
      <tr class="mdc-data-table__header-row">
        <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Cidade</th>
        <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric" role="columnheader" scope="col">Casos</th>
        <th class="mdc-data-table__header-cell mdc-data-table__header-cell--numeric" role="columnheader" scope="col">Mortes</th>
        <th class="mdc-data-table__header-cell" role="columnheader" scope="col">Última atualização</th>
      </tr>
    </thead>
    <tbody class="mdc-data-table__content">
    <% @cities.each do |city| %>
      <tr class="mdc-data-table__row">
        <td class="mdc-data-table__cell"><%= city.name %></td>
        <td class="mdc-data-table__cell mdc-data-table__cell--numeric"><%= city.confirmed %></td>
        <td class="mdc-data-table__cell mdc-data-table__cell--numeric"><%= city.deaths %></td>
        <td class="mdc-data-table__cell"><%= city.date.strftime('%d/%m/%Y') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
